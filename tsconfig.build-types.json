// tsconfig.build-types.json
{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@framework/*": ["src/l2d/Framework/src/*"]
    }
  },
  "include": ["src/index.ts"],
  "exclude": [
    "node_modules",
    "**/*.cy.ts",
    "**/*.spec.ts",
    "**/__tests__/**/*",
    "src/l2d/**/*"
  ]
}
